@model Vidly.ViewModels.CustomerMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@**
    Shows all of the customers from the current data set
*@


@{
    var hasCustomers = (Model.Customers.Count > 0);
}

<h1>Customers</h1>

@if (hasCustomers)
{
    <table class="table">
        <thead>
            <tr scope="row">
                <th scope="col">Customer</th>
                <th scope="col">Payment Type</th>
            </tr>
        </thead>
        @foreach (var customer in Model.Customers)
        {
            <tr scope="row">
                <td>
                    @Html.ActionLink(customer.Name, "Details", "Customers", new { ID = customer.ID}, null)
                </td>
                <td>@customer.MembershipType.Name</td>
            </tr>
        }
    </table>
}
else
{
    <br>
    <p>We don't have any customers yet.</p>
}

